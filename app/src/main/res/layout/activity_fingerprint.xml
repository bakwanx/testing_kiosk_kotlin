<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.FingerprintActivity">

    <LinearLayout
        android:id="@+id/main_panel_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/finger_view"
                android:layout_width="@dimen/finger_view_width"
                android:layout_height="@dimen/finger_view_height"
                android:contentDescription=""
                android:src="@drawable/fingerprint_512" />

            <TextureView
                android:id="@+id/camera_view"
                android:layout_width="@dimen/finger_view_width"
                android:layout_height="@dimen/finger_view_height"
                android:visibility="visible" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/horizontal_margin_half">

            <Button
                android:id="@+id/main_btn_initialize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:onClick="onTryConnect"
                android:text="initialization" />

            <LinearLayout
                android:id="@+id/main_file_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_btn_initialize">

                <Button
                    android:id="@+id/main_btn_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onStart"
                    android:text="start"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/main_btn_capture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Capture"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/main_btn_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onStop"
                    android:text="stop"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_wsq_group_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_file_group_layout">

                <Button
                    android:id="@+id/main_btn_exportTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="onExportAs"
                    android:text="export To Wsq"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/main_btn_importFromWsq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onImportFromWsq"
                    android:text="importFromWsq"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/main_btn_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_wsq_group_layout"
                android:enabled="false"
                android:onClick="onClose"
                android:text="release" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/main_line_view_first"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_panel_first" />

    <LinearLayout
        android:id="@+id/main_panel_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_line_view_first">

        <TextView
            android:id="@+id/capture_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_match_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/level_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <View
        android:id="@+id/main_line_view_second"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_panel_second" />

    <FrameLayout
        android:id="@+id/main_panel_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_line_view_second">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temp_algorithm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:paddingBottom="@dimen/main_activity_title_text_gap"
                android:textAlignment="center" />

            <RadioGroup
                android:id="@+id/algorithm_type_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/algorithm_type_ansi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="ansi"
                    android:textSize="@dimen/min_textSize" />

                <RadioButton
                    android:id="@+id/algorithm_type_iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="iso"
                    android:textSize="@dimen/min_textSize" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/scan_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginStart="@dimen/horizontal_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:text="Auto capture:"
                android:textSize="@dimen/min_textSize" />

            <CheckBox
                android:id="@+id/auto_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:checked="true"
                android:text="Opened"
                android:textSize="@dimen/min_textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/horizontal_margin2"
                android:text="Preview mode:"
                android:textSize="@dimen/min_textSize" />

            <CheckBox
                android:id="@+id/preview_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:checked="false"
                android:enabled="false"
                android:text="Opened"
                android:textSize="@dimen/min_textSize" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/main_line_view_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_panel_three" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/horizontal_margin"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/main_line_view_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_line_view_three">

        <TextView
            android:id="@+id/loggingBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/main_panel_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/main_btn_enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="onEnroll"
                android:text="ENROLL" />

            <Button
                android:id="@+id/main_btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/main_btn_enroll"
                android:enabled="false"
                android:onClick="onMatchFeature"
                android:text="VERIFY" />

            <Button
                android:id="@+id/main_btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/main_btn_verify"
                android:enabled="true"
                android:onClick="onRemoveFeatureByName"
                android:text="REMOVE" />

            <Button
                android:id="@+id/main_btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/main_btn_remove"
                android:enabled="true"
                android:onClick="onClearAllFeature"
                android:text="CLEAR" />

            <Button
                android:id="@+id/main_btn_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_btn_enroll"
                android:layout_marginTop="@dimen/main_activity_title_text_gap"
                android:onClick="onDebug"
                android:text="DEBUG"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_below="@+id/main_panel_five">

            <EditText
                android:id="@+id/edt_debug"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#C0C0C0"
                android:enabled="true"
                android:gravity="top"
                android:scrollbars="vertical"
                android:textIsSelectable="true"
                android:text="" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/main_line_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>